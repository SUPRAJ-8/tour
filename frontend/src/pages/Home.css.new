/* Categories Section */
.categories-section {
  padding: 80px 0;
  background-color: #f9f9f9;
}

.categories-container {
  display: flex;
  gap: 30px;
  margin-top: 40px;
}

.category-card {
  flex: 1;
  border-radius: 12px;
  overflow: hidden;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  background-color: #fff;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.category-card:hover {
  transform: translateY(-10px);
  box-shadow: 0 15px 40px rgba(0, 0, 0, 0.15);
}

.category-image {
  height: 250px;
  position: relative;
  overflow: hidden;
}

.category-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.5s ease;
}

.category-card:hover .category-image img {
  transform: scale(1.1);
}

.category-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(to bottom, rgba(0, 0, 0, 0.1) 0%, rgba(0, 0, 0, 0.7) 100%);
}

.category-content {
  padding: 25px;
  text-align: center;
}

.category-content h3 {
  font-size: 28px;
  margin-bottom: 15px;
  color: #333;
  font-weight: 700;
}

.category-content p {
  color: #666;
  margin-bottom: 20px;
  line-height: 1.6;
}

.category-destinations {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 10px;
  margin-bottom: 25px;
}

.category-destinations span {
  background-color: #f0f0f0;
  padding: 6px 12px;
  border-radius: 20px;
  font-size: 14px;
  color: #555;
  transition: all 0.3s ease;
}

.category-destinations span:hover {
  background-color: #ff6b6b;
  color: white;
}

@media (max-width: 768px) {
  .categories-container {
    flex-direction: column;
  }
  
  .category-image {
    height: 200px;
  }
}
